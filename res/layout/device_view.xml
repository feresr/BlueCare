<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paired_device_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/device_icon"
        android:layout_width="68sp"
        android:layout_height="68sp"
        android:contentDescription="@string/device_icon"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="4sp"
        android:paddingLeft="8dp"
        android:paddingTop="4sp" >

        <TextView
            android:id="@+id/deviceNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nokia HS-26W"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/macAddressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:19:4F:AE:C3"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right|bottom"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="12sp"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/created_atTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:gravity="right|bottom"
                android:paddingLeft="3sp"
                android:paddingRight="2sp"
                android:text="12 minutes ago, 10:25am"
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>